<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="5dip"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:id="@+id/spiYear"
        android:layout_width="150dip"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/spiMonth"
        android:layout_below="@+id/spiYear"
        android:layout_marginTop="10dip"
        android:layout_marginBottom="5dip"
        android:layout_width="150dip"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:id="@+id/btnRefresh"
        android:text="Refresh"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/spiMonth"
        android:layout_marginTop="5dp"
        android:id="@+id/vwBar2"
        android:background="@android:color/darker_gray"/>

    <ListView
        android:layout_marginTop="10dip"
        android:layout_below="@+id/vwBar2"
        android:id="@+id/lstCalender"
        android:layout_width="match_parent"
        android:dividerHeight="@dimen/activity_vertical_margin"
        android:divider="#00000000"
        android:layout_height="match_parent">
    </ListView>

</RelativeLayout>